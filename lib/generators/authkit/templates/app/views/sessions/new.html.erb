<h1>Sign In</h1>

<%= form_tag(login_path, method: "post") do %>
  <div class="field">
    <%= label_tag "email", "Email or username" %>
    <%= text_field_tag "email" %>
  </div>
  <div class="field">
    <%= label_tag "password" %>
    <%= password_field_tag "password" %>
  </div>
  <%= submit_tag "Login" %>
<% end %>
